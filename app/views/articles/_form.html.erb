<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :投稿者名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :記事タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :記事本文 %>
    <%= form.text_area :text, :size => "100x15" %>
  </div>

  <div class="field">
    <%= form.label :カテゴリー %>
    <%= form.text_field :category %>
  </div>

  <div class="field">
   <%= form.label :img %>
   <%= form.file_field :img, class: "image" %>
  </div>

  <p><%= form.check_box :remove_img %>画像を削除する</p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to '記事削除', article, method: :delete %>
