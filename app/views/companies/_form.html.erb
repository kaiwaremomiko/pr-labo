<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company_name %>
    <%= form.text_field :company_name %>
  </div>

  <div class="field">
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  
  <div class="field">
    <%= form.label :representative %>
    <%= form.text_field :representative %>
  </div>

  <div class="field">
    <%= form.label :tel_number %>
    <%= form.text_field :tel_number %>
  </div>

  <div class="field">
    <%= form.label :work_field %>
    <%= form.text_field :work_field %>
  </div>

  <div class="field">
    <%= form.label :establishment %>
    <%= form.text_field :establishment %>
  </div>

  <div class="field">
    <%= form.label :capital %>
    <%= form.text_field :capital %>
  </div>

  <div class="field">
    <%= form.label :pr %>
    <%= form.text_area :pr, :size => "60x15" %>
  </div>

  <div class="field">
   <%= form.label :img %>
   <%= form.file_field :img, class: "image" %>
  </div>

  <p><%= form.check_box :remove_img %>画像を削除する</p>

  <div class="actions">
    <%= form.submit %>
  </div>
